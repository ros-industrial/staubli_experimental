<?xml version="1.0" encoding="utf-8" ?>
<Programs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.staubli.com/robotics/VAL3/Program/2" >
  <Program name="recvData" access="public" >
    <Parameters xmlns="http://www.staubli.com/robotics/VAL3/Param/1" >
      <Parameter name="x_sTcpSocket" type="sio" use="reference" xsi:type="element" dimensions="1" />
      <Parameter name="x_nData" type="num" use="reference" xsi:type="array" dimensions="1" />
      <Parameter name="x_nConnFlag" type="num" use="reference" xsi:type="element" dimensions="1" />
      <Parameter name="x_bValidFlag" type="bool" use="reference" xsi:type="element" dimensions="1" />
    </Parameters>
    <Locals>
      <Local name="l_nByte" type="num" xsi:type="array" size="1" />
      <Local name="l_nBytesRecv" type="num" xsi:type="array" size="1" />
      <Local name="l_nIndex" type="num" xsi:type="array" size="1" />
    </Locals>
    <Code><![CDATA[begin
  // attempt to receive data on specified socket
  l_nBytesRecv=0
  l_nIndex=0
  x_bValidFlag=false

  while (l_nBytesRecv<size(x_nData))
    l_nIndex=sioGet(x_sTcpSocket,l_nByte)
    if (l_nIndex==1)
      x_nData[l_nBytesRecv]=l_nByte
      l_nBytesRecv=l_nBytesRecv+l_nIndex
      // received a byte, set flag to indicate connection
      x_nConnFlag=1
    elseIf (l_nIndex==-1)
      // error or timeout, indicate only if connection previously established
      if (x_nConnFlag==1)
        x_nConnFlag=-1
        // close connection properly (to avoid CLOSE_WAIT)
        clearBuffer(x_sTcpSocket)
      endIf
      return
    elseIf (l_nIndex>1)
      popUpMsg("sioGet() returned > 1")
      //else
      //  popUpMsg("sioGet() returned 0")
    endIf
  endWhile
  x_bValidFlag=true
end]]></Code>
  </Program>
</Programs>